	</delete>
	
	<!-- 리스트에서 미승인을 눌렀을시 파일 삭제하기 위해서 ********* 디테일도 이거씁니다.***** -->
	<select id="FileDelete" parameterType="vDTO" resultMap="baseVspotMember">
		select <include refid="vspotbasecolumn" />
		from vspot
		where vspot_num = ${vspotNum}
	</select>
	
	
	
 	<!-- 활동활동 -->
